<main class="contact-section py-5 bg-light">
  <div class="container">
    <h1 class="display-5 fw-bold text-center mb-4">Contact Me</h1>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>

        <p class="text-center mb-4 text-muted">
          Feel free to reach out for collaboration, questions, or just to say hello.
        </p>

        <%= form_with url: contact_path, method: :post, local: true do %>
          <div class="mb-3">
            <label for="name" class="form-label fw-semibold">Name</label>
            <%= text_field_tag :name, nil, id: "name", class: "form-control", placeholder: "Your name" %>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label fw-semibold">Email</label>
            <%= email_field_tag :email, nil, id: "email", class: "form-control", placeholder: "you@example.com" %>
          </div>

          <div class="mb-3">
            <label for="message" class="form-label fw-semibold">Message</label>
            <%= text_area_tag :message, nil, id: "message", rows: 5, class: "form-control", placeholder: "Your message here..." %>
          </div>

          <button type="submit" class="btn btn-primary w-100">Send Message</button>
        <% end %>
      </div>
    </div>
  </div>
</main>

